{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts"]
}
